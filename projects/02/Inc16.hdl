/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    And16 (a=true, b[0]=true, b[1..15]=false, out=um);
    Add16 (a=in, b=um, out=out);
    
}